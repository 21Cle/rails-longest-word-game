<h1><strong>New game</strong></h1>

<p><%= @letters %></p>

<form action="/score" method="post" data-turbo="false">
  <p>What is the longest word you can find?</p>
        <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
        <%= hidden_field_tag "lettervalue", @letters %>
    <input type="text" name="word" class="form-control" placeholder="type your word" aria-label="username" aria-describedby="button-addon2">
      <button class="btn btn-outline-secondary" name="play" type="submit" id="button-addon2">Play</button>
</form>
